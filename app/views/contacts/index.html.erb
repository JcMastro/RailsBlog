<h1>Contacts</h1>
<table>
    <thead>
        <tr>
        <th>Nombre</th>
        <th>Fecha de nacimiento</th>
        <th>Edad</th>
        <th>Correo</th>
        <th colspan= "3"></th>
        </tr>
    </thead>
    <tbody>
        <% @contacts.each do |contact| %>
            <tr>    
                <td> <%= contact.name %></td>
                <td><%= l(contact.dob,:format => "%m/%d/%Y")%></td>
                <td><%= contact.age %></td>
                <td><%= contact.email %></td>
                <td><%= link_to 'Show', contact%> </td>
                <td><%= link_to 'Edit', edit_contact_path(contact)%> </td>
                <td><%= link_to 'Destroy', method: :delete, data: {confirm: 'esta seguro?'}%> </td>
            </tr>

        <% end %>
    </tbody>
</table>
<br/>
<%= link_to "New Contact", new_contact_path %>