<table>
    <thead>
        <tr>
        <th>Phone type</th>
        <th>Number</th>        
        <th colspan= "3"></th>
        </tr>
    </thead>
    <tbody>
        <% @contact.phones.each do |phone| %>
            <tr>    
                <td> <%= phone.phone_type %></td>
                <td><%= phone.number%></td>
                <td><%= link_to 'Destroy', contact_phone_path(@contact, phone), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
    
